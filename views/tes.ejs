<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <style>
        table,th,td{padding: 5px;}
    </style>
</head>
<body>
    <h1>Admin</h1>
    <form method="post" action="/insertseason">
        <h2>Season</h2>
        <table>
            <tr>
                <th>ID</th>
                <th>Season</th>
            </tr>

            <% data.forEach(x => { %>
                <tr>
                    <td><%= x.id%></td>
                    <td><%=x.nama_season%></td>
                    <td><a href="/deleteseason/<%= x.id %>">delete</a></td>
                    <td><a href="/updateseason/<%= x.id %>">edit</a></td>
                </tr>
            <%})%>
        </table>
        <br/>
        <label for="season">Season : </label>
        <input type="text" name="season" placeholder="season baru"/>
        <input type="submit" value="submit"/>
    </form>

    <form method="post" action="/insertkategori">
        <h2>Kategori</h2>
        <table>
            <tr>
                <th>Season</th>
                <th>Kategori</th>
            </tr>
        
            <% kategori.forEach(x => { %>
            <tr>
                <td><%=x.nama_season%></td>
                <td><%=x.nama_kategori%></td>                
                <td><a href="/deletekategori/<%= x.id %>">delete</a></td>
                <td><a href="/updatekategori/<%= x.id %>">edit</a></td>
            </tr>
            <%})%>
        </table>
        <br/>
        
        <select name="season" >
        <% data.forEach(x => { %>
            <option value="<%= x.id %>" ><%= x.nama_season %></option>
        <%})%>
        </select>
        <label for="season">Kategori : </label>
        <input type="text" name="kategori" placeholder="kategori baru"/>
        <input type="submit" value="submit"/>        
    </form>

    <form method="post" action="/insertproduct">
        <h2>Product</h2>
        <table>
            <tr>
                <th>Season</th>
                <th>Kategori</th>
                <th>Product</th>
                <th>Harga</th>
                <th>Description</th>
            </tr>
            <% product.forEach(x => { %>
            <tr>
                <td><%=x.nama_season%></td>
                <td><%=x.nama_kategori%></td>                
                <td><%=x.nama_product%></td>                
                <td><%=x.harga%></td>   
                <td><%=x.description%></td>                                             
                <td><a href="/deleteproduct/<%= x.id %>">delete</a></td>
                <td><a href="/updateproduct/<%= x.id %>">edit</a></td>
            </tr>
            <%})%>
        </table>
        
        <table>
            <tr>
                <td colspan="2">
                    <select name="season_kategori" >
                        <% kategori.forEach(x => { %>
                            <option value="<%= x.id %>" > <%= x.nama_season %> (<%=x.nama_kategori%>)</option>
                        <%})%>
                    </select>
                </td>
            </tr>
            <tr>
                <td><label for="product">Product </label></td>
                <td>: <input type="text" name="product" placeholder="Product baru"/></td>
            </tr>
            <tr>
                <td><label for="harga">Harga </label></td>
                <td>: <input type="number" name="kategori" placeholder="Harga Product"/></td>
            </tr>
            <tr>
                <td><label for="description">Description </label></td>
                <td>: <input type="text" name="description" placeholder="Deskripsi Product"/></td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="submit"/>         
                </td>
            </tr>
        </table>
        
    </form>
</body>
</html>